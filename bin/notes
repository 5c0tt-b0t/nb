# AGPLv3 • See LICENSE for details.
###############################################################################

export __THIS_PATH="$0"

if [[ -L "${__THIS_PATH}" ]]
then
  __THIS_PATH="$(realpath "${__THIS_PATH}")"
fi

export __THIS_DIR=
__THIS_DIR="$(cd "$(dirname "${__THIS_PATH}")" || :; pwd)"

source "${__THIS_DIR}/../notes"
